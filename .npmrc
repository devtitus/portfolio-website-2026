# Fail install if lockfile out of date (good for CI)
frozen-lockfile=true
# Use a single lock for any future workspaces
shared-workspace-lockfile=true
# Speed: skip auditing during CI (enable locally if you want)
audit=false
# Prefer offline if cache has everything (optional)
prefer-offline=true
# Allow all build scripts (turns off approval gate)
require-build-approval=false